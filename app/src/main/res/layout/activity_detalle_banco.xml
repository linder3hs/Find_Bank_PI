<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.linder.find_bank.activities.DetalleBancoActivity">

    <RelativeLayout
        android:id="@+id/containerBg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_agente">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left">
            <com.like.LikeButton
                android:id="@+id/btn_heart"
                app:icon_type="heart"
                app:icon_size="25dp"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">
            <ImageView
                android:id="@+id/btnClose"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_close"
                android:background="#53292929"
                android:layout_marginBottom="0dp"
                android:layout_marginEnd="0dp"/>
        </LinearLayout>
        <com.like.LikeButton
            app:icon_type="heart"
            app:icon_size="25dp"
            android:backgroundTint="#fff"
            android:id="@+id/btn_favorite"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="05dp"
            android:orientation="vertical"
            android:background="#53292929">
                <TextView
                    android:id="@+id/nombreAgente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nombre_de_agente"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textSize="20sp"
                    android:layout_margin="6dp"/>
                <TextView
                    android:id="@+id/direccionAgente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/direccion_de_agente"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textSize="18sp"
                    android:layout_margin="6dp"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/containerDe"
        android:layout_below="@+id/containerBg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_edit_text">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detalles"
                android:gravity="center"
                android:layout_margin="6dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#2e9fd7"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="12dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="1dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sistema"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:layout_margin="12dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/seguridad"
                    android:textColor="#000"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:layout_margin="12dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/sistema"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Si"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="#40c151"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_margin="12dp"/>
                <RatingBar
                    android:id="@+id/clalificacionAgente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/RatingBar"
                    android:progressBackgroundTint="@color/colorPrimary"
                    android:progressBackgroundTintMode="multiply"
                    style="@style/Base.Widget.AppCompat.RatingBar.Small"
                    android:elevation="4dp"
                    android:numStars="5"
                    android:rating="4"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/colorPrimary"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/containerDe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_edit_text">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adicional"
            android:gravity="center"
            android:layout_margin="6dp"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#2e9fd7"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo: "
            android:textColor="#000"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:layout_margin="12dp"/>
        <TextView
            android:id="@+id/tipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo"
            android:textColor="#000"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:layout_margin="12dp" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/horario"
                    android:textColor="#000"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:layout_margin="12dp"/>
                <TextView
                    android:id="@+id/horaA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_8_00am_6_00pm"
                    android:textColor="#000"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:layout_margin="12dp" />
                <Button
                    android:id="@+id/editarAgent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Editar"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
</ScrollView>