<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/foto_imageall"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/bcp_logo"
            />

        <TextView
            android:id="@+id/nombre_textall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/foto_imageall"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Nombre del agente"/>

        <LinearLayout
            android:layout_below="@+id/nombre_textall"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/direccionFavoall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/foto_imageall"
                android:layout_below="@+id/nombre_text"
                android:textSize="16sp"
                android:gravity="center"
                android:text="lat"/>

            <TextView
                android:id="@+id/sistemaFavorall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/foto_image"
                android:layout_below="@+id/nombre_textall"
                android:textSize="16sp"
                android:gravity="center"
                android:text="lng"/>

        </LinearLayout>



    </RelativeLayout>
</android.support.v7.widget.CardView>
